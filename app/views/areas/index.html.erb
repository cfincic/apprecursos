<h1>Listing areas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Jefe</th>
      <th>Esdire</th>
      <th>Madre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.descripcion %></td>
        <td><%= area.jefe %></td>
        <td><%= area.esdire %></td>
        <% if !area.area.nil? %>
        <td><%= area.area.descripcion %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', area %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

