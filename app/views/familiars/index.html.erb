<h1>Familiares a cargo de <%= @agente.nombre %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Relacion</th>
      <th>Cuil</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha nac</th>
      <th>Lugar nac</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @familiars.each do |familiar| %>
      <tr>
        <td><%= familiar.relacion %></td>
        <td><%= familiar.cuil %></td>
        <td><%= familiar.nombre %></td>
        <td><%= familiar.apellido %></td>
        <td><%= familiar.fecha_nac %></td>
        <td><%= familiar.lugar_nac %></td>
        <td><%= link_to 'Ver', agente_familiar_path(@agente, familiar) %></td>
        <td><%= link_to 'Editar', edit_agente_familiar_path(@agente, familiar) %></td>
        <td><%= link_to 'Eliminar', agente_familiar_path(@agente, familiar), method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Volver', agente_path(@agente) %>
<%= link_to 'Nuevo', new_agente_familiar_path(@agente) %>
