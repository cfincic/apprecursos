<h1>Situaciones de revista</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_contrataciones.each do |tipo_contratacion| %>
      <tr>
        <td><%= tipo_contratacion.descripcion %></td>
        <td><%= link_to 'Ver', tipo_contratacion %></td>
        <td><%= link_to 'Modificar', edit_tipo_contratacion_path(tipo_contratacion) %></td>
        <td><%= link_to 'Eliminar', tipo_contratacion, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva situación de revista', new_tipo_contratacion_path %>
